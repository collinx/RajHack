<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#E8EAF6"
android:id="@+id/lin_lay"
android:orientation="vertical"
tools:context="in.gov.rajasthan.doitc.rajhack.SplashScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/splashss">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/national_logo"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="8"
                android:padding="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Bhamashah Yojana"
                    android:layout_weight="1"
                    android:textSize="28sp"
                    android:gravity="center"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:text="Government Of Rajasthan"
                    android:textSize="16sp"
                    android:fontFamily="serif-monospace"
                    android:layout_weight="1"
                    android:gravity="center"/>


            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:paddingTop="144dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bha_logo"
            android:layout_gravity="center"
            />

    </LinearLayout>

</LinearLayout>